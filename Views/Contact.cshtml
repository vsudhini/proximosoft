@model ProximoSoft.Website.Models.ContactUs

@{
    ViewBag.Title = "Contact Us";
}
<div class="full_page_photo">
    <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=200%2BCentennial%2BAvenue%2BPiscataway%2C%2BNJ%2B08854&ie=UTF8&z=12&t=m&iwloc=near&output=embed"></iframe>
    
</div>
<div class="container">
    <section id="contact">
        <div class="hgroup">
            <h1>Contact us</h1>
            <h2>ProximoSoft serves Global 200 clients from its anchor offices in following locations...</h2>
            <ul class="breadcrumb pull-right">
                <li><a href="index.html">Home</a> <span class="divider">/</span></li>
                <li class="active">Contact</li>
            </ul>
        </div>
        <div class="row">
            <div class="span4 office_address">
                <address>
                    <strong>ProximoSoft, Inc.</strong></br>
                    5 Independence way<br/>
			        Princeton<br/>
			        NJ 08540<br/>
			        <abbr title="Phone"><i class="icon-phone"></i></abbr>&nbsp;732-903-4333<br/>
                    <abbr title="Email"><i class="icon-envelope"></i></abbr>&nbsp;info@proximosoft.com<br/>
                    <br/>
                </address>
               
            </div>
            <div class="span8 contact_form">
                @using(Html.BeginForm()) {
                    <div class="row">
                        <div class="span4">
                            <label>Name</label>
                            <input type="text" class="span4">
                            @Html.TextBoxFor(m => m.fullName)
                        </div>
                        <div class="span4">
                            <label>E-mail</label>
                            <input type="text" class="span4">
                            @Html.TextBoxFor(m => m.email)
                        </div>
                        <div class="span8">
                            <label>Subject</label>
                            <input type="text" class="span8">
                            @Html.TextBoxFor(m => m.subject)
                        </div>
                        <div class="span8">
                            <label>Message</label>
                            <textarea rows="8" class="span8"></textarea>
                            @Html.TextAreaFor()m => m.message)
                        </div>
                        <div class="span8"> <a class="btn btn-large btn-success"><span>Submit Message</span></a> </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!--END Contact-->
</div>